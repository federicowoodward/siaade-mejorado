<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Comprobante de Inscripcion a Examen</title>
    <style>
      body {
        font-family: Arial, Helvetica, sans-serif;
        padding: 32px;
        line-height: 1.5;
      }
      h1 {
        text-align: center;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 12px;
      }
      th,
      td {
        padding: 6px 4px;
        font-size: 12px;
      }
      th {
        font-weight: bold;
        border-bottom: 1px solid #000;
      }
      .year-summary {
        margin-top: 8px;
        font-size: 13px;
        display: flex;
        justify-content: space-between;
      }
      .divider {
        border-top: 1px solid #000;
        margin: 12px 0;
      }
    </style>
  </head>
  <body>
    <h1>{{instituteName}}</h1>
    <p style="text-align:center; margin-top:-12px;">
      <strong>{{subtitle}}</strong>
    </p>
    <div class="divider"></div>

    <div style="display: flex; justify-content: space-around;">
      <p>
        Estudiante:
        <strong>{{student.lastname}}, {{student.name}}</strong><br />
        Sexo:
        <strong>{{student.sex}}</strong>&nbsp;&nbsp; Nacido el:
        <strong>{{student.birthDateText}}</strong>
        {{#if student.bornPlace}}
          en
          <strong>{{student.bornPlace}}</strong>
        {{/if}}<br />
        Documento:
        <strong>{{student.documentType}}</strong>
        Nro:
        <strong>{{student.documentNumber}}</strong><br />
      </p>
      <p>
        Cuil:
        <strong>{{student.cuil}}</strong><br />
        Correo:
        <strong>{{student.email}}</strong><br />
        Telefono:
        <strong>{{student.telephone}}</strong>
      </p>
    </div>

    {{! comprobante empieza aca }}
    <div class="divider"></div>

    {{#if planName}}
      <p style="font-weight:bold; margin-top: 8px;">
        {{planName}}
      </p>
    {{/if}}

    <table>
      <thead>
        <tr>
          <th style="width: 18%;">Fecha</th>
          <th style="width: 15%;">Hora</th>
          <th style="width: 20%;">Estado</th>
          <th>Materia</th>
        </tr>
      </thead>
      <tbody>
        {{#if exams.length}}
          {{#each exams}}
            <tr>
              <td>{{this.dateText}}</td>
              <td>{{this.timeText}}</td>
              <td>{{this.statusText}}</td>
              <td>{{this.subjectName}}</td>
            </tr>
          {{/each}}
        {{else}}
          <tr>
            <td colspan="4">
              El alumno no registra inscripciones a examenes finales para el
              periodo seleccionado.
            </td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </body>
</html>