{
  "name": "siaade_mej",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build tsconfig.build.json --force && tsc-alias -p tsconfig.build.json",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:watch": "nodemon --watch src --ext ts,js --exec ts-node -r tsconfig-paths/register src/main.ts",
    "db:migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate src/database/migrations/AutoMigration -d src/database/datasource.ts",
    "db:migration:create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create src/database/migrations/ManualMigration -d src/database/datasource.ts",
    "db:migration:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d src/database/datasource.ts",
    "db:migration:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d src/database/datasource.ts",
    "db:show": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:log -d src/database/datasource.ts",
    "db:schema:drop": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:drop -d src/database/datasource.ts",
    "db:reset:dev": "npm run db:schema:drop && npm run db:migration:run && npm run --if-present seed:dev",
    "typeorm:migration:run": "npm run db:migration:run",
    "dbml": "db2dbml postgres \"postgresql://siad_admin:12345SIAAD*@localhost:5432/SIAD?schemas=public\" -o database.dbml",
    "migrate:prod": "node ./node_modules/typeorm/cli.js migration:run -d dist/database/datasource.js",
    "revert:prod": "node ./node_modules/typeorm/cli.js migration:revert -d dist/database/datasource.js",
    "reseed:prod": "npm run revert:prod && npm run migrate:prod",
    "start:prod": "npm run migrate:prod && node dist/main.js",
    "smoke:siad": "ts-node -r tsconfig-paths/register src/scripts/smoke-siad.ts",
    "smoke:endpoints": "ts-node -r tsconfig-paths/register src/scripts/smoke-endpoints.ts",
    "test:finals-admin": "ts-node -r tsconfig-paths/register src/scripts/test-finals-admin.ts",
    "seed:prod": "npm run migration:run",
    "seed:dummy": "npm run migration:run",
    "unseed:dummy": "npm run migration:revert",
    "test:prerequisites": "vitest run src/modules/prerequisites/__tests__/prerequisites.service.spec.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/common": "^11.1.5",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.5",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.5",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "handlebars": "^4.7.8",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "puppeteer": "^24.30.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.26",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/handlebars": "^4.0.40",
    "@types/node": "^24.0.15",
    "@types/passport-jwt": "^4.0.1",
    "nodemon": "^3.1.4",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "vitest": "^4.0.8"
  }
}
